<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp"
    app:cardCornerRadius="20dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.google.android.material.imageview.ShapeableImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:id="@+id/articleImg"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/international_newspapers_69x52__800x533_l_1419494241"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/articleTitle"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/articleImg"
            android:textColor="@color/ArticleTitleColor"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="10dp"
            android:maxLines="2"
            android:fontFamily="sans-serif-smallcaps"
            android:text="Tesla ordered to stop polluting Bay Area air with ‘frequent and ongoing’ toxic emissions"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/read_more"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/articleTitle"
            app:layout_constraintBottom_toBottomOf="parent"
            android:textColor="@color/readMore"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_margin="20dp"
            android:maxLines="2"
            android:fontFamily="casual"
            android:text="Read More >"/>

 <!--       <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/articlePublishedAt"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/articleAuthor"
            app:layout_constraintEnd_toEndOf="parent"
            android:text="2024-06-27T06:14:48Z"/>-->

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>